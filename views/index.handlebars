<img id="burger-logo" src="/assets/img/burgerlogo.jpg"> {{!--

<h1 id="title">eat-A-Burger!</h1> --}}

<div class="container">

    <div class="row" id="addburger">
        <div class="col-lg-12">
            <form class="add-burger">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Enter Burger Here" id="newburger">
                    <span class="input-group-btn">
                        <button class="btn btn-success" id="buttoncolor" type="submit">Submit</button>
                    </span>
                </div>
            </form>
            <!-- /input-group -->
        </div>
    </div>
    <!-- /.col-lg-6 -->


    <br>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default" id="border">
                <div class="panel-heading" id="red">
                    <h3 class="panel-title">Burger's Ordered</h3>
                </div>
                <div class="panel-body">
                    {{#each burgers}} {{#unless this.devoured}} {{this.id}}. {{this.burger_name}}
                    <span id="right">
                        <button data-id="{{this.id}}" type="button" id="buttoncolor" class="devour-btn btn btn-success">Done</button>
                    </span>
                    <hr> {{/unless}} {{/each}}
                </div>
            </div>
        </div>


        <div class="col-sm-6">
            <div class="panel panel-default" id="border">
                <div class="panel-heading" id="red">
                    <h3 class="panel-title">Eaten Burgers</h3>
                </div>
                <div class="panel-body">
                    {{#each burgers}} {{#if this.devoured}}
                    <span>{{this.id}}. {{this.burger_name}}</span>
                    <hr> {{/if}} {{/each}}
                </div>
            </div>
        </div>
    </div>

</div>